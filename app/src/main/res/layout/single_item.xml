<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvNameInitialFav"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif"
        android:text="MS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/civImage"
        android:layout_alignEnd="@+id/civImage"
        android:layout_above="@+id/textView1GV"
        android:layout_alignParentTop="true" />


    <com.pkmmte.view.CircularImageView
        android:id="@+id/civImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView1GV"
        android:hint="Name"
        android:text="name"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:textColor="#141414"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/civImage"
        android:layout_alignLeft="@+id/civImage"
        android:layout_alignStart="@+id/civImage"
        android:layout_alignRight="@+id/civImage"
        android:layout_alignEnd="@+id/civImage" />

</RelativeLayout>