<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/text"
        android:text="Izabrali ste Ime Prezime (123 456-789)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/civImage1"
        android:layout_toStartOf="@+id/civImage1" />


    <TextView
        android:id="@+id/tvNameInitial"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:singleLine="true"
        android:background="@drawable/rounded_corner"
        android:layout_alignRight="@+id/civImage1"
        android:layout_alignLeft="@+id/civImage1"
        android:layout_alignTop="@+id/civImage1"
        android:layout_alignBottom="@+id/civImage1"
        android:fontFamily="sans-serif"
        android:text="MS"
        android:layout_above="@+id/dialogButtonCancel"
        android:layout_toRightOf="@+id/text"
        android:layout_toEndOf="@+id/text" />

    <com.pkmmte.view.CircularImageView
        android:id="@+id/civImage1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true"
        android:layout_alignTop="@+id/text"
        android:layout_alignRight="@+id/dialogButtonOK"
        android:layout_alignEnd="@+id/dialogButtonOK" />


    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:text=" OtkaÅ¾i "
        android:textColor="@color/secondary_text"
        android:layout_alignTop="@+id/dialogButtonOK"
        android:layout_toLeftOf="@+id/dialogButtonOK" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:text=" Da "
        android:textColor="@color/primary_dark"
        android:layout_below="@+id/text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>